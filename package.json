{
  "name": "eface-contracts",
  "version": "1.0.0",
  "license": "MIT",
  "author": "eFace Organisation",
  "description": "eFace Contracts",
  "scripts": {
    "prepare": "husky",
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage --solcoverjs ./.solcover.ts",
    "clean": "npx hardhat clean",
    "test": "npx hardhat test",
    "test-all": "npm run deploy-localhost && npm run test",
    "private-network": "npx hardhat node",
    "generate-types": "TYPECHAIN_FORCE=true npx hardhat typechain && npx hardhat gobind",
    "generate-docs": "npx hardhat markup",
    "lint-fix": "npm run lint-sol-fix && npm run lint-ts-fix && npm run lint-json-fix",
    "lint-json-fix": "prettier --write \"./**/*.json\"",
    "lint-ts-fix": "prettier --write \"./**/*.ts\"",
    "lint-sol-fix": "prettier --write \"contracts/**/*.sol\""
  },
  "dependencies": {
    "@iden3/contracts": "1.0.0",
    "@openzeppelin/contracts": "4.9.6",
    "@openzeppelin/contracts-upgradeable": "4.9.6",
    "@solarity/solidity-lib": "2.7.2",
    "solidity-bytes-utils": "^0.8.2"
  },
  "devDependencies": {
    "@iden3/js-crypto": "^1.0.3",
    "@iden3/js-iden3-core": "^1.2.1",
    "@iden3/js-merkletree": "^1.1.2",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.6",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@solarity/hardhat-gobind": "^1.2.2",
    "@solarity/hardhat-habits": "^1.0.1",
    "@solarity/hardhat-markup": "^1.0.7",
    "@solarity/hardhat-migrate": "^2.1.7",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.14",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.16.0",
    "chai": "^4.4.1",
    "circomlibjs": "^0.1.7",
    "dotenv": "^16.4.5",
    "ethers": "^6.11.1",
    "hardhat": "2.20.1",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^2.0.2",
    "husky": "^9.0.11",
    "mocha": "^10.3.0",
    "mock-local-storage": "^1.1.24",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "snarkjs": "^0.7.3",
    "solhint": "^4.1.1",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.11",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typechain": "8.3.2",
    "typescript": "^5.4.3"
  }
}
